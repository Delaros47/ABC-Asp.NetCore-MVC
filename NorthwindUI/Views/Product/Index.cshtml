@model ProductListViewModel


<table class="table table-hover" >
    <thead>
    <tr>
        <th>Product Name</th>
        <th>Unit Price</th>
        <th>Units In Stock</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitPrice</td>
                <td><a asp-controller="Product" asp-action="AddToCart" asp-route-productId="@product.ProductId" class="btn btn-primary">Add To Cart</a></td>
            </tr>
        }
    </tbody>
</table>